{
  "name": "@roadmanict/nodejs-common",
  "version": "1.0.0",
  "description": "Common code for Roadman ICT projects",
  "repository": "https://github.com/roadmanict/nodejs-common",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./dist ./coverage ./.nyc_output",
    "tslint": "tslint 'spec/**/*.ts' 'src/**/*.ts'",
    "ts": "tsc",
    "ts:incremental": "tsc --incremental",
    "ts:watch": "tsc -w",
    "watch": "nodemon --watch src --watch spec --exec \"npm run tslint && npm run ts:incremental && npm run test\"",
    "test": "nyc jasmine",
    "build": "npm run audit && npm run tslint && npm run ts && npm run test",
    "postinstall": "tsc -p tsconfig-postinstall.json",
    "prets:watch": "npm run clean",
    "prewatch": "npm run clean",
    "prebuild": "npm run clean"
  },
  "author": "Geert Weggemans",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^15.1.1",
    "@roadmanict/nodejs-code-style": "git+https://github.com/roadmanict/nodejs-code-styes.git",
    "@types/hapi__joi": "^15.0.3",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@types/jasmine": "^3.4.0",
    "jasmine": "^3.4.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "tslint": "^5.19.0",
    "tslint-microsoft-contrib": "^6.2.0"
  }
}
